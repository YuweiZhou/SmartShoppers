<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="vivian.smartshoppers.Payer_Info"
    tools:showIn="@layout/activity_payer__info"
    android:orientation="vertical">

    <TextView
        android:id="@+id/payerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payer name"
        android:textSize="13pt"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/payerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:text="Payer address"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:text="total payment"
        android:textStyle="bold" />


    <Button
        android:id="@+id/RefreshHelperList"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Complete Order"
        android:textStyle="bold"
        android:onClick="completeOrder"/>


    <ListView
        android:id="@android:id/list"
        android:name="vivian.smartshoppers.HelperListFragment"
        android:layout_width="match_parent"
        android:clickable="false"
        android:layout_height="match_parent" />



</LinearLayout>
